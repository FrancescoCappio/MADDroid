<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/tv_order_number_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentStart="true"
        android:text="Order Number:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Time:"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tv_order_number"
        android:layout_below="@+id/tv_order_number_title"/>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/tv_order_number_title"
        android:text=" ss"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>


    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xx:yy"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/tv_order_number"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/tv_schedule_title"
        />
    <TextView
        android:id="@+id/tv_rider_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tv_rider_id"
        android:layout_marginEnd="10dp"
        android:text="rider_id:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_rider_id"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:text="yyyy"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/tv_customer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/tv_customer_id"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/tv_rider_id"
        android:text="customer_id:"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_customer_id"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_rider_id"
        android:text="yyyy"
        android:textColor="@android:color/black"
        android:textSize="15sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true">

    </View>

</RelativeLayout>