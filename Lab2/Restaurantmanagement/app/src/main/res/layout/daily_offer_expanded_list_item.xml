<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#DBDBDB">

    <TextView
        android:id="@+id/tv_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Dish Name"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tv_price_title"
        android:textSize="15sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_dish_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dish Description very very very very very very very very very very very very very very long..."
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/tv_dish_name"
        android:layout_toStartOf="@id/tv_quantity_title"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/tv_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/tv_price"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content"
        android:text="5.50â‚¬"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_toStartOf="@+id/tv_quantity"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_dish_name"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_dish_name"/>

    <View
        android:id="@+id/view_margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>