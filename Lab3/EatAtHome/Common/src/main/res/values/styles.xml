<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/eah_orange</item>
        <item name="colorPrimaryDark">@color/eah_orange_dark</item>
        <item name="colorAccent">@color/eah_white</item>
    </style>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/eah_white</item>
        <item name="colorPrimaryDark">@color/eah_orange_dark</item>
        <item name="colorAccent">@color/eah_orange</item>
    </style>

    <style name="MainAppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/eah_orange</item>
        <item name="colorPrimaryDark">@color/eah_orange_dark</item>
        <item name="colorAccent">@color/eah_yellow</item>
    </style>

    <style name="MainOrangeAccent" parent="MainAppTheme">
        <item name="colorAccent">@color/eah_orange</item>
    </style>

    <style name="MainAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MainAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MainAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
